---
interface Props {
  variant?: string;
  id?: string;
}
const { variant = "", id } = Astro.props;
---

{
  () => {
    if (variant === "paper") {
      return (
        <section id={id} class="paper">
          <slot />
        </section>
      );
    } else {
      return (
        <section id={id}>
          <slot />
        </section>
      );
    }
  }
}

<style lang="scss">
  @use "../styles/tokens/tokens" as t;

  section {
    padding: t.$pd-section;
  }

  .paper {
    position: relative;
    background: center / cover url("../assets/paper-background.svg") t.$clr-tan;
  }

  .paper::before,
  .paper::after {
    position: absolute;
    content: "";
    left: 0;
    right: 0;
    width: 100%;
    height: 100%;
    max-height: 2rem;
  }

  .paper::before {
    top: 0;
    transform: translate(0, -95%);
    background: center / cover no-repeat url("../assets/paper.svg");
  }

  .paper::after {
    bottom: 0;
    transform: translate(0, 95%);
    background: center / cover no-repeat url("../assets/paper-variant.svg");
  }
</style>
