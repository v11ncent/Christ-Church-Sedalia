---
export interface Props {
  text: string;
}
const { text } = Astro.props;
---

<div class="scrolling-banner">
  <div class="container">
    <p>{text}</p>
  </div>
</div>

<style lang="scss">
  @use "../styles/tokens/tokens" as t;

  .scrolling-banner {
    position: sticky;
    top: 0;
    margin-top: auto;
  }

  .container {
    position: relative;
    bottom: 0;
    color: black;
    padding: t.$pd-block t.$pd-inline;
    background-color: t.$clr-tan;
    text-align: center;
    font-size: clamp(0.875rem, 1vw, 1.125rem);
    background: center / cover no-repeat url("../assets/paper-background.png");
  }

  .container::before,
  .container::after {
    position: absolute;
    content: "";
    left: 0;
    right: 0;
    width: 100%;
    height: 100%;
  }

  .container::before {
    top: 0;
    transform: translate(0, -95%);
    background: center / cover no-repeat url("../assets/paper.svg");
  }

  .container::after {
    bottom: 0;
    transform: translate(0, 95%);
    background: center / cover no-repeat url("../assets/paper-variant.svg");
  }
</style>
