---
interface Props {
  id?: string;
  text: string;
}

const { id, text } = Astro.props;
---

<div id={id} class="scrolling-banner">
  <div class="container">
    <p class="center">{text}</p>
  </div>
</div>

<style lang="scss">
  @use "../styles/tokens/tokens" as t;

  .container {
    position: relative;
    bottom: 0;
    padding: 1rem;
    text-align: center;
    font-size: clamp(0.875rem, 1vw, 1.125rem);
    color: black;
    background: center / cover url("../assets/paper-background.png") t.$clr-tan;
  }

  .container::before,
  .container::after {
    position: absolute;
    content: "";
    left: 0;
    right: 0;
    width: 100%;
    height: 100%;
    max-height: 2rem;
  }

  .container::before {
    top: 0;
    transform: translate(0, -95%);
    background: center / cover no-repeat url("../assets/paper.png");
  }

  .container::after {
    bottom: 0;
    background: center / cover no-repeat url("../assets/paper.png");
    transform: translate(0, 95%) rotate(180deg);
  }
</style>
