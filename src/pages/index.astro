<style lang="scss">
  @use "../styles/tokens/tokens" as t;

  section#hero {
    display: flex;
    flex-direction: column;
    min-height: min(90vh, 50rem);
    color: white;
    background: center / cover no-repeat url("../assets/hero.png");

    :global(.max-width) {
      padding: 0 t.$pd-inline;
    }

    .container {
      display: flex;
      flex-direction: column;
      margin: auto;
      text-align: center;
    }

    header {
      margin-bottom: 1.5rem;
    }

    h1 {
      text-transform: capitalize;
      font-size: clamp(2rem, 1rem + 3vw, 2.5rem);
      font-family: t.$ff-yeseva;
    }

    p {
      max-width: 60ch;
      margin-bottom: 1.5rem;
      line-height: 1.5;
    }

    .links {
      display: flex;
      flex-wrap: wrap;
      gap: 0.75rem;
      margin: 0 auto;

      :global(.link) {
        width: 100%;
      }
    }
  }

  :global(section#our-mission) {
    .container {
      display: flex;
      flex-wrap: wrap;
      gap: 3rem;
      max-width: 34.375rem;
    }

    p {
      color: t.$clr-grey;

      &:not(:last-of-type) {
        margin-bottom: 0.75rem;
      }

      &:last-of-type {
        margin-bottom: 1.5rem;
      }
    }

    .image-container {
      min-height: 21rem;
    }

    .image-container img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-radius: t.$br-large;
      border: 0.25rem solid t.$clr-tan;
    }
  }

  :global(section#media-hub) {
    p {
      color: t.$clr-grey;

      &:last-of-type {
        margin-bottom: 1.5rem;
      }
    }

    .links {
      display: flex;
      gap: 0.75rem;
    }
  }

  :global(section#bible-study) {
    p {
      color: t.$clr-grey;
    }

    .text-container {
      p {
        margin-bottom: 1.5rem;
      }
    }

    .dropdown-container {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
      margin-top: 2.5rem;

      @media (min-width: t.$bp-tablet) {
        gap: 3rem;
        margin-top: 4rem;
      }
    }
  }

  :global(section#events) {
    .container {
      display: flex;
      flex-direction: column;
      gap: 4rem;
    }

    .text-container {
      p {
        color: t.$clr-grey;
        margin-bottom: 1.5rem;
      }
    }

    .event-container {
      ul {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        width: 100%;
        height: 100%;
      }
    }
  }

  :global(section#join) {
    overflow: hidden;
    background: center / cover no-repeat url("../assets/join-background.png");

    .container {
      display: grid;
      grid-template-columns: 1fr;
      grid-template-rows: 1fr;
      margin-top: calc(t.$pd-block * 3);
      color: t.$clr-tan;
      text-align: center;
    }

    .text-container {
      grid-column: 1;
      grid-row: 1;
      z-index: 10;

      :global(.section-header) {
        margin: 0 auto 1.5rem auto;
      }

      p {
        margin-bottom: 1.5rem;
      }

      .links {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
      }
    }

    .decorations-container {
      position: relative;
      grid-column: 1;
      grid-row: 1;

      .circle,
      .thorns {
        position: absolute;
        content: "";
        width: 35rem;
        height: 35rem;
        border-radius: 100%;
      }

      .circle {
        z-index: 2;
        top: 50%;
        left: 50%;
        background: center / cover url("../assets/paper-background.svg")
          t.$clr-black;
        transform: translate(-50%, -50%);
      }

      .thorns {
        z-index: 1;
        top: 0;
        left: 50%;
        background: center / contain url("../assets/thorns.svg");
        border-radius: 100%;
        transform: translate(-50%, -35%);
      }
    }
  }
</style>
