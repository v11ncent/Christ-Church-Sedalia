---
import Layout from "../layouts/BaseLayout.astro";
import MaxWidthContainer from "../components/MaxWidthContainer.astro";
import ScrollingBanner from "../components/ScrollingBanner.astro";
import Link from "../components/Link.astro";
---

<Layout title="Welcome to Astro.">
  <main>
    <section id="hero">
      <MaxWidthContainer>
        <div class="container">
          <header>
            <h1>Come Worship Jesus With Us</h1>
          </header>
          <p>
            Lorem ipsum dolor sit amet consectetur adipisicing elit.
            Voluptatibus, molestias rem ducimus esse officia recusandae quidem
            numquam nihil repellendus perferendis.
          </p>
          <div class="links">
            <Link variant="primary" to="/bible-study" text="Bible study" />
            <Link variant="secondary" to="/our-mission" text="Our mission" />
          </div>
        </div>
      </MaxWidthContainer>
      <ScrollingBanner
        text="Service on Sundays starting 10:00 CST at 936 East Holley, MO."
      />
    </section>
  </main>
</Layout>

<style lang="scss">
  @use "../styles/tokens/tokens" as t;

  section#hero {
    display: flex;
    flex-direction: column;
    min-height: 90vh;
    color: white;
    background: center / cover no-repeat url("../assets/hero.png");

    :global(.max-width) {
      margin-top: auto;
    }

    header {
      margin-bottom: 1.5rem;
    }

    h1 {
      text-transform: capitalize;
      font-size: clamp(2rem, 2.5vw, 3rem);
      font-family: t.$ff-yeseva;
    }

    p {
      margin-bottom: 1.5rem;
      line-height: 1.5;
    }

    .links {
      display: flex;
      flex-wrap: wrap;
      gap: 0.75rem;

      :global(.link) {
        width: 100%;
      }
    }
  }
</style>
