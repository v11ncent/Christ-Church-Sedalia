<style lang="scss">
  @use "../styles/tokens/tokens" as t;

  section#hero {
    display: flex;
    flex-direction: column;
    min-height: 90vh;
    color: white;
    background: center / cover no-repeat url("../assets/hero.png");

    :global(.max-width) {
      padding: 0 t.$pd-inline;
    }

    .container {
      margin: auto;
    }

    header {
      margin-bottom: 1.5rem;
    }

    h1 {
      text-transform: capitalize;
      font-size: clamp(2rem, 2.5vw, 3rem);
      font-family: t.$ff-yeseva;
    }

    p {
      margin-bottom: 1.5rem;
      line-height: 1.5;
    }

    .links {
      display: flex;
      flex-wrap: wrap;
      gap: 0.75rem;

      :global(.link) {
        width: 100%;
      }
    }
  }

  :global(section#our-mission) {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;

    p {
      color: t.$clr-grey;

      &:not(:last-of-type) {
        margin-bottom: 0.75rem;
      }

      &:last-of-type {
        margin-bottom: 1.5rem;
      }
    }

    .image-container {
      min-height: 20.625rem;
    }

    .image-container img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-radius: t.$br-large;
      border: 0.25rem solid t.$clr-tan;
    }
  }

  :global(section#media-hub) {
    p {
      color: t.$clr-grey;

      &:last-of-type {
        margin-bottom: 1.5rem;
      }
    }
  }
</style>
